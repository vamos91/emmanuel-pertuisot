



<div class="wrapper">
    <div class="container">
      <div class="col-md-8 col-md-offset-2">
         <%= simple_form_for @contact_form do |f| %>
         <div class="" style="box-shadow: 0 1px 13px rgba(0,0,0,20); padding: 60px;">
            <div class="form-group">

                <%= f.input :name, label: false, class: 'form-control', placeholder: 'Votre nom'%>
            </div>
           <div class="form-group">

               <%= f.input :email, label: false, class: 'form-control', placeholder: 'Votre adresse email (ex: albator@gmail.com)' %>
           </div>
           <div class="form-group">

               <%= f.text_area :content, class: 'form-control', rows: 4, placeholder: 'Votre message' %>
           </div>
           <div class="form-group">
               <%= f.submit "ENVOYER", class: 'btn-primary btn-lg' %>
           </div>
       <% end %>
       </div>
    </div>
  </div>
</div>
