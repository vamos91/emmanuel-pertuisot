<div class="wrapper padded" style="margin-top: 100px;">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-xs-12 well">
         <p class="text-center">ENTRER UNE NOUVELLE PEINTURE</p>
<%= simple_form_for(@article) do |f| %>
<div class="form-group">
  <%= f.input :title, label: false, placeholder: 'Met nous un titre bien sympa !' %>
</div>
  <div class="form-group">
      <%= f.text_area :description, label: :DESCRIPTION,rows: 10, placeholder: "C'est quoi cette article ?? aller...lache toi sans faire de copier/coller ! :)", class: 'form-control'%>
  </div>
  <div class="form-group">
     <%= f.input :photo, label: :PHOTO %>
  <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-group">
     <%= f.input :illustration_1, label: :illustration1 %>
  </div>
  <div class="form-group">
     <%= f.input :illustration_2, label: :illustration2 %>
  </div>
  <div class="form-group">
     <%= f.input :illustration_3, label: :illustration3 %>
  </div>
  <div class="form-group">
     <%= f.input :illustration_4, label: :illustration4 %>
  </div>
  <%= f.submit "ENVOYER" %>
<% end %>
      </div>
       <div class="col-sm-6 col-xs-12 expendable">
          <% @articles.each do |article| %>
          <div class="panel-group">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <li><a data-toggle="collapse" href="#<%= article.id%>"><%= article.title %></a></li>
                  <li><%= link_to "Modifier", edit_article_path(article), class: "modifier" %></li>
                  <li><%= link_to "Supprimer", article_path(article), method: :delete, class: "supprimer"%></li>
                </h4>
              </div>
              <div id="<%= article.id%>" class="panel-collapse collapse">
                <div class="panel-body"><%= cl_image_tag article.photo %><%= article.description%></div>
                <div class="panel-footer">Ajouter le <%= article.created_at%></div>
              </div>
            </div>
          </div>

          <%end%>
        </div>
      </div>
    </div>
  </div>
