<div class="wrapper padded" style="margin-top: 100px;">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-xs-12 well">
         <p class="text-center">ENTRER UNE NOUVELLE PEINTURE</p>
<%= simple_form_for(@gallery) do |f| %>
<div class="form-group">
  <%= f.input :title, label: false, placeholder: 'Whouaa ! trop belle ta peinture. Donne lui un nom.' %>
</div>
  <div class="form-group">
      <%= f.text_area :description, label: :DESCRIPTION,rows: 10, placeholder: "Qu'est ce que c'est que cette peinture cette fois ci ! Allez raconte moi son histoire, on veut tout savoir... :)", class: 'form-control'%>
  </div>
  <div class="form-group">
     <%= f.input :picture, label: :PEINTURE %>
  <%= f.input :picture_cache, as: :hidden %>
  </div>
  <%= f.submit "ENVOYER" %>
  <%end%>
      </div>
       <div class="col-sm-6 col-xs-12 expendable">
          <% @galleries.each do |gallery| %>
          <div class="panel-group">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <li><a data-toggle="collapse" href="#<%= gallery.id%>"><%= gallery.title %></a></li>
                  <li><%= link_to "Modifier", edit_gallery_path(gallery), class: "modifier" %></li>
                  <li><%= link_to "Supprimer", gallery_path(gallery), method: :delete, class: "supprimer"%></li>
                </h4>
              </div>
              <div id="<%= gallery.id%>" class="panel-collapse collapse">
                <div class="panel-body"><%= cl_image_tag gallery.picture %><%= gallery.description%></div>
                <div class="panel-footer">Ajouter le <%= gallery.created_at%></div>
              </div>
            </div>
          </div>

          <%end%>
        </div>
      </div>
    </div>
  </div>



